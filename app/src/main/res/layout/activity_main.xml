<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<!--    <androidx.constraintlayout.widget.ConstraintLayout-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        tools:layout_editor_absoluteX="-49dp"-->
<!--        tools:layout_editor_absoluteY="-104dp">-->

        <Button
            android:id="@+id/button"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/buttonText"
            app:layout_constraintLeft_toRightOf="@+id/foodLocationEditText"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/foodLocationEditText"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="84dp"
            android:text="@string/foodLocationText"
            android:textColor="@color/colorEditText"
            app:layout_constraintBottom_toTopOf="@+id/userLocationEditText"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/button"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/userLocationEditText"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="@string/userLocationText"
            android:textColor="@color/colorEditText"
            app:layout_constraintStart_toStartOf="@+id/foodLocationEditText"
            app:layout_constraintTop_toBottomOf="@+id/foodLocationEditText" />

    <TextView
        android:id="@+id/testing"
        android:layout_width="112dp"
        android:layout_height="38dp"
        app:layout_constraintTop_toBottomOf="@+id/button"
        android:text="TextView"
        android:textSize="28dp"
        tools:layout_editor_absoluteX="125dp"
        tools:layout_editor_absoluteY="97dp" />
    <!--    </androidx.constraintlayout.widget.ConstraintLayout>-->

</androidx.constraintlayout.widget.ConstraintLayout>